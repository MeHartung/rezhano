<div class="product-item{% if options.narrow|default(false) %} product-item_narrow{% endif %}">
    {% if image_url(product.mainImage) is not empty %}
    <a class="product-item__image" href="{{ path('product', { 'slug': product.slug }) }}"
       style="background: url({{ image_url(product.mainImage) }}) center no-repeat; background-size: cover" title="{{ product.name|e('html_attr') }}" >
    {% else %}
        <a class="product-item__image" href="{{ path('product', { 'slug': product.slug }) }}"
           style="background: url({{('/images/no_photo.png')}}) center no-repeat;" title="{{ product.name|e('html_attr') }}" >
    {% endif %}
        {% if product.sale %}
            <div class="product-item__discount-ticket">
                <span>-{{ product.discountLevel }}%</span>
            </div>
        {% endif %}
    </a>
    <div class="product-item__info">
        <a href="{{ path('product', {'slug': product.slug}) }}" class="product-item__title" >{{ product.name }}</a>
        <button class="addtocart-button button button_add-to-cart" data-product-id="{{ product.id }}"><span>{{ product|productPrice }}</span></button>
    </div>
</div>

